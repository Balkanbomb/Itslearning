<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_mah"
    android:gravity="right"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".TestActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passWordET"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mah_logotyp_vit"
        />
   

    <EditText
        android:id="@+id/userIDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Mah login"
        android:padding="8dp" 
        android:background="@drawable/edit_text_background">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/passWordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/userIDet"
        android:layout_marginTop="12dp"
        
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="8dp" 
        android:background="@drawable/edit_text_background"/>

    <Button
        android:id="@+id/reloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/passWordET"
        android:layout_below="@+id/passWordET"

        android:layout_marginTop="12dp"
        android:onClick="update"
        android:text="Update"
        android:background="@color/grey"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

</RelativeLayout>
